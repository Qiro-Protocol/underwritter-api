generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  BORROWER
  UNDERWRITER
  LENDER
  USER
}

enum RecordType {
  CREDIT
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  username  String    @unique
  password  String
  profileId Int?
  company   Company[]
  role      UserRole  @default(USER)
}

model Company {
  id          Int        @id @default(autoincrement())
  name        String
  headLine    String
  description String
  logo        String
  website     String
  city        String
  country     String
  foundedYear DateTime
  teamSize    String
  owner       User       @relation(fields: [ownerId], references: [id])
  ownerId     Int
  creidt      Record[]
  documents   Document[]
}

model Record {
  id        Int        @id @default(autoincrement())
  label     String
  value     String
  type      RecordType
  Company   Company?   @relation(fields: [companyId], references: [id])
  companyId Int?
}

model Document {
  id    Int    @id @default(autoincrement())
  label String
  link  String

  Company   Company? @relation(fields: [companyId], references: [id])
  companyId Int?
}
